<!DOCTYPE html>
<html>
  <head>
    <title>Ethereum Transaction Viewer</title>
  </head>
  <body>
    <h1>Ethereum Transaction Viewer</h1>
    <form action="/search" method="post">
      <label for="wallet_address">Wallet Address:</label>
      <input
        type="text"
        id="wallet_address"
        name="wallet_address"
        required
      /><br />
      <label for="start_block">Start Block:</label>
      <input type="number" id="start_block" name="start_block" required /><br />
      <input type="submit" value="Search" />
    </form>
    <h2>Transaction Data:</h2>
    <ul>
      <% transactions.forEach((tx) => { %>
      <li>From: <%= tx.from %></li>
      <li>To: <%= tx.to %></li>
      <li>Value (ETH): <%= web3.utils.fromWei(tx.value, 'ether') %></li>
      <hr />
      <% }); %> <% if (transactions.length === 0) { %>
      <li>No transactions found.</li>
      <% } %>
    </ul>
  </body>
</html>
